{
  "name": "ng-signalify",
  "version": "1.0.0-beta.5.1",
  "description": "Angular 17+ için modern, signal-tabanlı form yönetimi, state management ve UI component kütüphanesi",
  "author": "Ahmet ALTUN",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/biyonik/ng-signalify.git"
  },
  "keywords": [
    "angular",
    "signals",
    "forms",
    "state-management",
    "components",
    "typescript",
    "reactive",
    "validation",
    "zod",
    "crud",
    "entity-store"
  ],
  "peerDependencies": {
    "@angular/common": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "@angular/core": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "@angular/forms": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "rxjs": "^7.0.0",
    "zod": "^3.22.0",
    "ts-node": "^10.9.2"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    },
    "xlsx": {
      "optional": false
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.0.0",
    "ng-packagr": "^17.0.0",
    "sass": "^1.69.0",
    "typescript": "~5.2.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0"
  },
  "scripts": {
    "build": "ng-packagr -p ng-package.json && npm run build:styles",
    "build:watch": "ng-packagr -p ng-package.json --watch",
    "build:styles": "npm run build:css && npm run build:css:min",
    "build:css": "sass lib/styles/main.scss dist/ng-signalify.css --load-path=lib/styles",
    "build:css:min": "sass lib/styles/main.scss dist/ng-signalify.min.css --style=compressed --load-path=lib/styles",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"lib/**/*.ts\""
  },
  "sideEffects": false,
  "typesVersions": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "ng-signalify",
  "version": "2.0.0-beta.1",
  "description": "Signal-first logic framework for Angular 17+ - Form management, state management, and API layer. UI-agnostic.",
  "author": "Ahmet ALTUN",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/biyonik/ng-signalify.git"
  },
  "keywords": [
    "angular",
    "signals",
    "forms",
    "state-management",
    "components",
    "typescript",
    "reactive",
    "validation",
    "zod",
    "crud",
    "entity-store"
  ],
  "peerDependencies": {
    "@angular/common": "^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "@angular/core": "^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "@angular/forms": "^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "@angular/material": "^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "rxjs": "^7.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0",
    "idb": "^8.0.3"
  },
  "peerDependenciesMeta": {
    "xlsx": {
      "optional": true
    },
    "@angular/material": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.10",
    "@angular/cli": "^17.0.10",
    "@angular/common": "^17.0.9",
    "@angular/compiler": "^17.0.9",
    "@angular/compiler-cli": "^17.0.9",
    "@angular/core": "^17.0.9",
    "@angular/forms": "^17.0.9",
    "@angular/platform-browser": "^17.3.9",
    "@angular/platform-browser-dynamic": "^17.3.9",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.0.0",
    "ng-packagr": "^17.3.0",
    "sass": "^1.95.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0",
    "zone.js": "^0.14.0",
    "idb": "^8.0.3"
  },
  "scripts": {
    "build": "ng-packagr -p ng-package.json && npm run build:styles && node scripts/post-build.js",
    "build:watch": "ng-packagr -p ng-package.json --watch",
    "build:styles": "sass lib/styles/main.scss dist/ng-signalify.css --load-path=lib/styles",
    "build:css": "sass lib/styles/main.scss dist/ng-signalify.css --load-path=lib/styles",
    "build:css:min": "sass lib/styles/main.scss dist/ng-signalify.min.css --style=compressed --load-path=lib/styles",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"lib/**/*.ts\""
  },
  "sideEffects": false,
  "exports": {
    "./components/core": {
      "types": "./components/core/index.d.ts",
      "default": "./components/core/index.js"
    },
    "./components/_legacy": {
      "types": "./components/_legacy/index.d.ts",
      "default": "./components/_legacy/index.js"
    }
  },
  "typesVersions": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist",
  "lib": {
    "entryFile": "public-api.ts",
    "styleIncludePaths": ["lib/styles"],
    "tsConfig": "tsconfig.lib.json"
  },
  "assets": [
    {
      "input": "lib/styles",
      "glob": "**/*.scss",
      "output": "styles"
    },
    "README.md",
    "LICENSE"
  ]
}
